  <body>
   {{> header }}


    <div class="update-container">
        <div class="container">
            <div class="search-cont">
                <input  type="text" id="cityName" placeholder="ENTER CITY" autocomplete="off">
                <input class="search-btn" type="submit" value="Search" id="submitBtn">
            </div>
            <div class="show-cont">
               <div class="show">
                  <div class="main">
                  <div id="date">date</div>
                  <div id="time">time</div>
                </div>
                <div class="middle">
                    <div id="show-city">Pune</div>
                  <div class="temp data-hide">
                    <div id="tempertaure"><span>12</span></div>
                    <div  id="img-status"></div>
                  </div>
                </div>
               </div>
            </div>
        </div>
    </div>

  
    {{> footer}}
